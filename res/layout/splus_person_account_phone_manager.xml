<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/splus_person_account_phone_welcome"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="#ff41403e"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/splus_person_account_phone_related"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/splus_person_account_phone_related_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:textColor="#ff41403e"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/splus_person_account_phone_unrelated"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/splus_person_account_phone_unrelated_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#ff41403e"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/splus_person_account_phone_unrelated_num"
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1.0"
                android:background="@drawable/splus_recharge_money_edit_selector"
                android:gravity="center_vertical"
                android:imeOptions="actionDone"
                android:inputType="phone|numberDecimal"
                android:maxLength="11"
                android:paddingBottom="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="0dp"
                android:textColor="#ff41403e"
                android:textCursorDrawable="@null"
                android:textSize="17dp" />

            <Button
                android:id="@+id/splus_person_account_phone_unrelated_getcode_btn"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/splus_login_btn_login_bg_selector"
                android:gravity="center"
                android:padding="0dp"
                android:textColor="#ff41403e"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/splus_person_account_phone_unrelated_code"
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1.0"
                android:background="@drawable/splus_recharge_money_edit_selector"
                android:gravity="center_vertical"
                android:inputType="phone|numberDecimal"
                android:paddingBottom="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="0dp"
                android:textColor="#ff41403e"
                android:textCursorDrawable="@null"
                android:textSize="17dp" />

            <Button
                android:id="@+id/splus_person_account_phone_unrelated_submit_btn"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:background="@drawable/splus_login_btn_login_bg_selector"
                android:focusable="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#ff41403e"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/splus_person_account_phone_hint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="25dp"
        android:textColor="#ff41403e"
        android:textSize="14dp" />

</LinearLayout>