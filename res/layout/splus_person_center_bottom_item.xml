<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splus_person_center_item_bottom_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/splus_person_center_item_bottom_bg_selector"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="0dp"
    android:paddingTop="0dp" >

    <ImageView
        android:id="@+id/splus_person_center_bottom_item_ic_left"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/splus_person_center_bottom_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#ff414030"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/splus_person_center_bottom_item_ic_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp" />

</LinearLayout>